{
  "python.defaultInterpreterPath": ".venv/bin/python",
  "python.terminal.activateEnvironment": false,
  "python.terminal.activateEnvInCurrentTerminal": false,
  "github.copilot.chat.copilotDebugCommand.enabled": false,
  "git.terminalAuthentication": false,
  "python.analysis.typeCheckingMode": "strict",
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.fixAll": "explicit",
      "source.unusedImports": "explicit",
      "source.organizeImports": "explicit",
      "source.convertImportFormat": "explicit",
    },
  },
  "isort.args": [
    "--profile",
    "black"
  ],
  "files.exclude": {
    "**/__pycache__": true,
    "**/.venv": true,
  },
  "restoreTerminals.terminals": [
    {
      "splitTerminals": [
        {
          "name": "dev",
          "commands": [
            "./scripts/run.sh"
          ]
        }
      ]
    },
    {
      "splitTerminals": [
        {
          "name": "tests",
          "commands": [
            "sleep 10; ./scripts/test.sh unit && ./scripts/test.sh integration && ./scripts/test.sh e2e"
          ]
        },
      ]
    },
    {
      "splitTerminals": [
        {
          "name": "Docker preview",
          "commands": [
            "./scripts/preview_docker.sh"
          ]
        },
        {
          "name": "SAM preview",
          "commands": [
            "./scripts/preview_sam.sh"
          ]
        },
      ]
    },
    {
      "splitTerminals": [
        {
          "name": "stripe :8000",
          "commands": [
            "./scripts/stripe-listen.sh 8000"
          ]
        }
      ]
    },
    {
      "splitTerminals": [
        {
          "name": "bash",
          "commands": []
        }
      ]
    },
  ],
  // CloudFormation intrinsic functions.
  "yaml.customTags": [
    "!And",
    "!If",
    "!Not",
    "!Equals",
    "!Or",
    "!FindInMap sequence",
    "!Base64",
    "!Cidr",
    "!Ref",
    "!Sub",
    "!GetAtt",
    "!GetAZs",
    "!ImportValue",
    "!Select",
    "!Select sequence",
    "!Split",
    "!Join sequence"
  ],
  "python.testing.pytestArgs": [
    "."
  ],
  "python.testing.unittestEnabled": false,
  "python.testing.pytestEnabled": true,
}